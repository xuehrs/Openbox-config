				<action name="Execute">
					<execute>lxappearance</execute>
				</action>
			</item>
			<item label="Tint2conf 系统面板编辑器">
				<action name="Execute">
					<execute>tint2conf</execute>
				</action>
			</item>
		</menu>
		<menu id="Exit" label="Exit Menu">
			<item label="锁屏">
				<action name="Execute">
					<execute>xscreensaver-command 
--lock</execute>
				</action>
			</item>
			<item label="退出">
				<action name="Execute">
					<execute>openbox --exit</execute>
				</action>
			</item>
			<item label="关机">
				<action name="Execute">
					<execute>systemctl poweroff</execute>
				</action>
			</item>
			<item label="重启">
				<action name="Execute">
					<execute>systemctl 
reboot</execute>
				</action>
			</item>
			<item label="断电">
				<action name="Execute">
					<execute>poweroff</execute>
				</action>
			</item>
			<item label="冬眠">
				<action name="Execute">
					<execute>systemctl hibernate</execute>
				</action>
			</item>
			<item label="暂停休眠">
				<action name="Execute">
					<execute>systemctl suspend-then-hibernate</execute>
				</action>
			</item>
			<item label="混合睡眠">
				<action name="Execute">
					<execute>systemctl 
hybrid-sleep</execute>
				</action>
			</item>
