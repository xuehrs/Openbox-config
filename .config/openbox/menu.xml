		<menu id="root-menu-settings" label="Openbox编辑器">
			<item label="aurostart 编辑">
				<action name="Execute">
					<execute>mousepad ~/.config/openbox/autostart</execute>
				</action>
			</item>
			<item label="conky 配置管理器">
				<action name="Execute">
					<execute>conky-manager</execute>
				</action>
			</item>
			<item label="xscreensaver 配置屏幕保护设置">
				<action name="Execute">
					<execute>xscreensaver-demo</execute>
				</action>
			</item>
			<item label="Obapps 配置应用程序设置">
				<action name="Execute">
					<execute>obapps</execute>
				</action>
			</item>
			<item label="Obconf  窗口管理器配置工具">
				<action name="Execute">
					<execute>obconf</execute>
				</action>
			</item>
			<item label="Obkey 配置键盘快捷键">
				<action name="Execute">
					<execute>obkey</execute>
				</action>
			</item>
			<item label="Obmenu  右键菜单编辑器">
				<action name="Execute">
					<execute>obmenu</execute>
				</action>
			</item>
			<item label="openbox-edit">
				<action name="Execute">
					<execute>mousepad ~/openbox/Openbox-config/README.md</execute>
				</action>
			</item>
			<item label="Idesktool Idesk工具箱">
				<action name="Execute">
					<execute>idesktool</execute>
